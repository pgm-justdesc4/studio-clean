{% macro hero(title, link) %}
    <div class="container">
        <h1>{{title}}</h1>

        {% if link %}
        <div class="button">
            <a href="{{link.url}}">{{link.text}}</a>
        </div>
        {% endif %}
        <hr>
    </div>
{% endmacro %}

{% macro image(images) %}
    <div class="container">{% for image in images %}
        <figure>
            <img src="/assets/images/{{ image.image }}" alt="{{ image.alt }}">
        </figure>{% endfor %}
    </div>
{% endmacro %}

{% macro article(post) %}
    <article>
        <a href="{{post.data.link}}">
            <figure>
                <img src="/assets/images/{{post.data.image.img}}" alt="{{post.data.image.alt}}">
            </figure>
            <h2>{{post.data.title}}</h2>
            <p>
                {{post.data.description}}
            </p>
        </a>
    </article>
{% endmacro %}