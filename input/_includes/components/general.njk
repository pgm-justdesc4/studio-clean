{% macro hero(title, link) %}
<section class="hero">
    <div class="container">
        <h1>{{title}}</h1>

        {% if link %}
        <div class="hero__btn">
            <a href="{{link.url}}">{{link.text}}</a>
        </div>{% endif %}
    </div>
</section>
{% endmacro %}

{% macro image(images) %}
<section class="spotlight-img">
    <div class="container">{% for image in images %}
        <div>
            <img src="assets/images/{{ image.image }}" alt="{{ image.alt }}">
        </div>{% endfor %}
    </div>
</section>
{% endmacro %}